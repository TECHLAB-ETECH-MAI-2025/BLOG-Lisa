{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('article_list') }}

    {# DataTables CSS (si non inclus dans ton encore) #}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('article_list') }}

    {# jQuery et DataTables JS (si non inclus dans ton encore) #}
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#articlesTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: "{{ path('api_articles_list') }}",
                    type: 'GET',
                    dataSrc: 'data'
                },
                columns: [
                    { data: 'id' },
                    { data: 'title' },
                    { data: 'categories' },
                    { data: 'commentsCount' },
                    { data: 'likesCount' },
                    { data: 'createdAt' },
                    { data: 'actions', orderable: false, searchable: false }
                ],
                order: [[0, 'desc']],
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json'
                }
            });
        });
    </script>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Liste des Articles</h1>

    <a href="{{ path('app_article_new') }}" class="btn btn-success mb-4">
        Créer un article
    </a>

    <table id="articlesTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Catégories</th>
                <th>Commentaires</th>
                <th>J'aime</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {# Le contenu sera injecté dynamiquement par DataTables via AJAX #}
        </tbody>
    </table>
</div>
{% endblock %}
