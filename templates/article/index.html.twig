{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Liste des Articles</h1>

    <div class="d-flex justify-content-end mb-3">
        <a href="{{ path('app_article_new') }}" class="btn btn-success">Créer un nouvel article</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Title</th>
                <th>Content</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>
                    {% if article.image %}
                        <img src="{{ article.image }}" alt="{{ article.title }}" width="100">
                    {% else %}
                        <img src="{{ asset('images/default.png') }}" alt="Pas d'image" width="100">
                    {% endif %}
                </td>
                <td>{{ article.title }}</td>
                <td>{{ article.content | slice(0, 50) ~ '...' }}</td> 
                <td>{{ article.createdAt ? article.createdAt|date('d/m/Y H:i') : '' }}</td>
                <td>{{ article.updatedAt ? article.updatedAt|date('d/m/Y H:i') : '' }}</td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-primary btn-sm me-2">
                            <i class="bi bi-eye"></i> Voir
                        </a>
                        <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center">Aucun article trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
