{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
<div class="container-fluid">
  <div class="row">

    <!-- Sidebar menu -->
    <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
      <div class="position-sticky pt-3">
        <h5 class="sidebar-heading px-3 mb-3 text-muted">Menu d'administration</h5>
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="{{ path('app_admin') }}">
              <i class="bi bi-speedometer2"></i> Tableau de bord
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_admin_users') }}">
              <i class="bi bi-people"></i> Gestion des utilisateurs
            </a>
          </li>
          <li class="nav-item mt-3">
            <a class="btn btn-outline-secondary" href="{{ path('app_home') }}">
              <i class="bi bi-arrow-left"></i> Retour au site
            </a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Main content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
      <h1 class="h2 mb-4">Tableau de bord d'administration</h1>

      {# Flash messages #}
      {% for label, messages in app.flashes %}
        {% for message in messages %}
          <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        {% endfor %}
      {% endfor %}

      <div class="row mb-4">
        <div class="col-md-4">
          <div class="card text-white bg-primary mb-3">
            <div class="card-body">
              <h5 class="card-title">Utilisateurs</h5>
              <p class="card-text fs-3">{{ userCount }}</p>
              <a href="{{ path('app_admin_users') }}" class="btn btn-light btn-sm">Voir les détails</a>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card text-white bg-success mb-3">
            <div class="card-body">
              <h5 class="card-title">Utilisateurs vérifiés</h5>
              <p class="card-text fs-3">{{ verifiedCount }}</p>
              <a href="{{ path('app_admin_users') }}" class="btn btn-light btn-sm">Voir les détails</a>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card text-white bg-warning mb-3">
            <div class="card-body">
              <h5 class="card-title">Administrateurs</h5>
              <p class="card-text fs-3">{{ adminCount }}</p>
              <a href="{{ path('app_admin_users') }}" class="btn btn-light btn-sm">Voir les détails</a>
            </div>
          </div>
        </div>
      </div>

      <h3>Actions rapides</h3>
      <a href="{{ path('app_admin_users_new') }}" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Créer un nouvel utilisateur
      </a>

    </main>
  </div>
</div>
{% endblock %}
