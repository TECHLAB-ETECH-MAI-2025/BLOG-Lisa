{% extends 'base.html.twig' %}

{% block title %}Détail du Commentaire{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2>Commentaire de {{ comment.author }}</h2>
        </div>
        <div class="card-body">
            <p><strong>ID :</strong> {{ comment.id }}</p>
            <p><strong>Auteur :</strong> {{ comment.author }}</p>
            <p><strong>Contenu :</strong><br>{{ comment.content }}</p>
            <p><strong>Créé le :</strong> {{ comment.createdAt ? comment.createdAt|date('d/m/Y H:i') : 'Date inconnue' }}</p>
        </div>
        <div class="card-footer d-flex justify-content-end gap-2">
            <a href="{{ path('app_comment_contoller_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_comment_contoller_edit', {'id': comment.id}) }}" class="btn btn-primary">Modifier</a>
            {{ include('comment_contoller/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
