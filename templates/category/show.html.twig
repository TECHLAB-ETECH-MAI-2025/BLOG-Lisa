{% extends 'base.html.twig' %}

{% block title %}Détails de la Catégorie{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">Détails de la Catégorie</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="row" class="table-primary">Id</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="table-primary">Nom</th>
                        <td>{{ category.name }}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="table-primary">Description</th>
                        <td>{{ category.description }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_category_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>
                <div class="d-flex gap-2">
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>
                    {{ include('category/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
