<form method="post" 
      action="{{ path('app_category_delete', {'id': category.id}) }}" 
      onsubmit="return confirm('Voulez-vous vraiment supprimer cette catégorie ? Cette action est irréversible.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    
    <button class="btn btn-danger d-flex align-items-center gap-2">
        <i class="bi bi-trash"></i> Supprimer
    </button>
</form>
