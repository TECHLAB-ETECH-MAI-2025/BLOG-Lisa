{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
<div class="container py-5">

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="list-group">
                <a href="{{ path('profile_show') }}" class="list-group-item list-group-item-action">Mon profil</a>
                <a href="{{ path('profile_edit') }}" class="list-group-item list-group-item-action active" aria-current="true">Modifier mon profil</a>
                <a href="{{ path('change_password') }}" class="list-group-item list-group-item-action">Changer mon mot de passe</a>
                <a href="{{ path('app_logout') }}" class="list-group-item list-group-item-action text-danger">DÃ©connexion</a>
            </div>
        </div>

        <div class="col-md-9">

            {# Flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <h2>Modifier mon profil</h2>

            {{ form_start(profileForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <div class="mb-3">
                    {{ form_label(profileForm.firstName, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(profileForm.firstName, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">
                        {{ form_errors(profileForm.firstName) }}
                    </div>
                </div>

                <div class="mb-3">
                    {{ form_label(profileForm.lastName, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(profileForm.lastName, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">
                        {{ form_errors(profileForm.lastName) }}
                    </div>
                </div>

                <div class="mb-3">
                    {{ form_label(profileForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(profileForm.email, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">
                        {{ form_errors(profileForm.email) }}
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>

            {{ form_end(profileForm) }}

        </div>
    </div>

</div>
{% endblock %}
